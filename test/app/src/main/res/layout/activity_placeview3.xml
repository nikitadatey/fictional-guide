<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".placeview3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/sasihithlu"
                android:gravity="bottom"
                android:text="SASIHITHLU"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <!-- first row begin -->

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/first"
                    android:orientation="vertical"
                    android:onClick="gallery3">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/gallery" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:background="@color/firstb"
                        android:padding="4dp"
                        android:text="GALLERY"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/second"
                    android:orientation="vertical"
                    android:onClick="direction3">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/mm" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:background="@color/secondb"
                        android:padding="4dp"
                        android:text="DIRECTION"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>
            <!-- first row end -->

            <!-- second row -->

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/third"
                    android:orientation="vertical"
                    android:onClick="description3">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/description" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:background="@color/thirdb"
                        android:padding="4dp"
                        android:text="DESCRIPTION"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/sixth"
                    android:orientation="vertical"
                    android:onClick="Hotel1">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/hotel" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:background="@color/sixthb"
                        android:padding="4dp"
                        android:text="HOTELS"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>


            <!-- end second row  -->


        </LinearLayout>
    </ScrollView>

</LinearLayout>